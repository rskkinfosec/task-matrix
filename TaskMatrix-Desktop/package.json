{
  "name": "taskmatrix-windows",
  "version": "3.0.0",
  "description": "Eisenhower Matrix Task Manager for Windows",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "dist": "electron-builder --win --x64"
  },
  "keywords": ["task", "manager", "eisenhower", "matrix", "productivity"],
  "author": "Your Name",
  "license": "MIT",
  "build": {
    "appId": "com.taskmatrix.app",
    "productName": "Task Matrix",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "icon.png",
      "signingHashAlgorithms": []
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12"
  }
}
